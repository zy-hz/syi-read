@import 'vendor/weui-wxss/weui.wxss';

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
} 

page {
  background-color: #f8f8f8;
  font-size: 16rpx;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}

.page__hd {
  padding: 40px;
}

.page__bd {
  padding-bottom: 40px;
}

.page__bd_spacing {
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.page__ft {
  padding-top: 100rpx;
  text-align: center;
}

.page__title {
  text-align: left;
  font-size: 20px;
  font-weight: 400;
}

.page__desc {
  margin-top: 5px;
  color: #888;
  text-align: left;
  font-size: 14px;
}

.page__sign {
  margin-top: 25px;
  color: #888;
  text-align: left;
  font-size: 14px;
  font-style: italic;
}

.weread-navigator__footer{
  margin-bottom: 0px;
  bottom: 0px;
  z-index: 999;
  background-color: #f8f8f8;
}

.weread-navigator__item{
    padding: 0 10px;
    text-align: center;
    background-color: #F6F6F6;
    height: 40px;
    line-height: 40px;
    color: black;
    border-top: 1px lightgray solid;
}

.weread-navigator__footer .navigator-hover {
  background-color: rgba(0, 0, 0, 0.1);
  opacity: 0.7;
}
